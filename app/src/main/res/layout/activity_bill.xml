                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/cart_icon" />-->

                    <!--</LinearLayout>-->

                    <!--</android.support.v7.widget.CardView>-->

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>